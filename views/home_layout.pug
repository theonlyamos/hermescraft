  body.animsition
    #851e9bdf_1635077968.powr-popup
    script(src='https://www.powr.io/powr.js?platform=html')
    // Header
    header.header3
      // Header desktop
      .container-menu-header-v3
        .wrap_header3.p-t-74
          // Logo
          a.logo3(href="/")
            img(src="images/icons/hermescraft-2.png" alt="IMG-LOGO")
          // Header Icon
          .header-icons3.p-t-38.p-b-60.p-l-8
            .header-wrapicon2
              img.header-icon1.js-show-header-dropdown(src="images/icons/icon-header-01.png" alt="ICON")
              // Header cart noti
              include includes/userMenu.pug
            span.linedivide1
            include includes/cartHeader.pug
          // Menu
          .wrap_menu
            nav.menu
              ul.main_menu
                li.sale-noti
                  a(href="/") Home
                li
                  a(href="/shop") Shop
                li
                  a(href="/cart") Cart
                li
                  a(href="/about") About
                li
                  a(href="/contact") Contact
        .bottombar.flex-col-c.p-b-65
          .bottombar-social.t-center.p-b-8
            a.topbar-social-item.fa.fa-facebook(href="#")
            a.topbar-social-item.fa.fa-instagram(href="#")
            a.topbar-social-item.fa.fa-pinterest-p(href="#")
            a.topbar-social-item.fa.fa-snapchat-ghost(href="#")
            a.topbar-social-item.fa.fa-youtube-play(href="#")
          .bottombar-child2.p-r-20
            .topbar-language.rs1-select2
              select.selection-1(name="time")
                option USD
                option EUR
      // Header Mobile
      .wrap_header_mobile
        // Logo moblie
        a.logo-mobile(href="/")
          img(src="images/icons/hermescraft-2.png" alt="IMG-LOGO")
        // Button show menu
        .btn-show-menu
          // Header Icon mobile
          .header-icons-mobile
            .header-wrapicon2
              img.header-icon1.js-show-header-dropdown(src="images/icons/icon-header-01.png" alt="ICON")
              // Header cart noti
              include includes/userMenu.pug
            span.linedivide2
            include includes/cartHeader.pug
          .btn-show-menu-mobile.hamburger.hamburger--squeeze
            span.hamburger-box
              span.hamburger-inner
      // Menu Mobile
      .wrap-side-menu
        nav.side-menu
          ul.main-menu
            li.item-topbar-mobile.p-l-20.p-t-8.p-b-8
              span.topbar-child1
                | Free shipping for standard order over $100
            li.item-topbar-mobile.p-l-20.p-t-8.p-b-8
              .topbar-child2-mobile
                span.topbar-email
                  | fashe@example.com
                .topbar-language.rs1-select2
                  select.selection-1(name="time")
                    option USD
                    option EUR
            li.item-topbar-mobile.p-l-10
              .topbar-social-mobile
                a.topbar-social-item.fa.fa-facebook(href="#")
                a.topbar-social-item.fa.fa-instagram(href="#")
                a.topbar-social-item.fa.fa-pinterest-p(href="#")
                a.topbar-social-item.fa.fa-snapchat-ghost(href="#")
                a.topbar-social-item.fa.fa-youtube-play(href="#")
            li.item-menu-mobile
              a(href="/") Home
            li.item-menu-mobile
              a(href="/shop") Shop
            li.item-menu-mobile
              a(href="/cart") Cart
            li.item-menu-mobile
              a(href="/about") About
            li.item-menu-mobile
              a(href="/contact") Contact
